<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

<changeSet id="1-create-TB_ESTADO-table" author="usuario">
        <createTable tableName="TB_ESTADO">
            <column name="SIGLA" type="CHAR(2)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NOME" type="VARCHAR2(30)"/>
        </createTable>
    </changeSet>

    <changeSet id="2-create-TB_CIDADE-table" author="usuario">
        <createTable tableName="TB_CIDADE">
            <column name="IBGE_ID" type="NUMBER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NOME" type="VARCHAR2(80)"/>
            <column name="SIGLA_ESTADO" type="CHAR(2)"/>
        </createTable>
    </changeSet>

    <changeSet id="3-create-TB_DADOS_COVID-table" author="usuario">
        <createTable tableName="TB_DADOS_COVID">
            <column name="ID" type="NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY">
                <constraints nullable="false"/>
            </column>
            <column name="NOVAS_MORTES" type="NUMBER"/>
            <column name="NOVOS_CASOS" type="NUMBER"/>
            <column name="MORTES_POR_100K_HABITANTES" type="FLOAT"/>
            <column name="CASOS_POR_100K_HABITANTES" type="FLOAT"/>
            <column name="CIDADE_ID" type="NUMBER"/>
            <column name="DATA" type="DATE"/>
        </createTable>
    </changeSet>

    <changeSet id="4-create-TB_FERIADOS_ESTADUAIS-table" author="usuario">
        <createTable tableName="TB_FERIADOS_ESTADUAIS">
            <column name="ID" type="NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="DATA" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="NOME" type="VARCHAR2(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ESTADO_ID" type="CHAR(2)"/>
        </createTable>
    </changeSet>

    <changeSet id="5-create-TB_FERIADOS_MUNICIPAIS-table" author="usuario">
        <createTable tableName="TB_FERIADOS_MUNICIPAIS">
            <column name="ID" type="NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY">
                <constraints nullable="false"/>
            </column>
            <column name="DATA" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="NOME" type="VARCHAR2(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ESTADO_ID" type="CHAR(2)"/>
            <column name="CIDADE_ID" type="NUMBER"/>
        </createTable>
    </changeSet>

    <changeSet id="6-create-TB_FERIADOS_NACIONAIS-table" author="usuario">
        <createTable tableName="TB_FERIADOS_NACIONAIS">
            <column name="ID" type="NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY">
                <constraints nullable="false"/>
            </column>
            <column name="DATA" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="NOME" type="VARCHAR2(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
